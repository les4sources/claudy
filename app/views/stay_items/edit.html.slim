= render TurboModal::Component.new(title: @modal_title, width: :md) do
  = form_with model: [@stay, @stay_item],
              data: { controller: "stay-items" } do |f|
    .space-y-8.divide-y.divide-gray-200.sm:space-y-5
      .space-y-6.sm:space-y-5
        = render "form", f: f


    = f.actions do
      = link_to "Retirer l'élément du séjour", 
                stay_stay_item_path(@stay_item.stay, @stay_item), 
                method: :delete,
                class: "text-xs font-semibold text-red-500",
                data: { \
                  turbo_method: :delete,
                  action: "turbo-modal--component#closeDialog" \
                }
      = f.submit "Enregistrer"