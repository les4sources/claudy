= turbo_stream.prepend "payments-#{@payment.booking_id}", 
                       partial: "payments/payment", 
                       locals: { payment: @payment } 

= turbo_stream.replace_all ".booking-#{@payment.booking_id}-payment-status", 
                           @payment.booking.payment_status

= turbo_stream.replace "booking-#{@payment.booking_id}-payments-sum",
                       @payment.booking.payments_total